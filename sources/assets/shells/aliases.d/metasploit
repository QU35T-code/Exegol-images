alias msfconsole='ruby /opt/tools/metasploit-framework/msfconsole'
alias msfd='ruby /opt/tools/metasploit-framework/msfd'
msfdb_func() {
    sudo -u postgres sh -c "cd /opt/tools/metasploit-framework && bundle exec /opt/tools/metasploit-framework/msfdb $@"
}
alias msfdb='msfdb_func'
alias msfrpc='ruby /opt/tools/metasploit-framework/msfrpc'
alias msfrpcd='ruby /opt/tools/metasploit-framework/msfrpcd'
alias msfupdate='ruby /opt/tools/metasploit-framework/msfupdate'
alias msfvenom='ruby /opt/tools/metasploit-framework/msfvenom'
